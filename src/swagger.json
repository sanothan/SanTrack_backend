{
  "openapi": "3.0.0",
  "info": {
    "title": "Rural Sanitation Inspection and Improvement System API",
    "version": "1.0.0",
    "description": "API for managing rural sanitation inspections and community improvement issues"
  },
  "servers": [
    { "url": "http://localhost:5000", "description": "Development" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "paths": {
    "/api/auth/register": {
      "post": {
        "summary": "Register new user",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name", "email", "password"],
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string", "minLength": 6 },
                  "role": { "type": "string", "enum": ["admin", "inspector", "communityLeader"] }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User registered successfully" },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login user",
        "tags": ["Auth"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": { "type": "string", "format": "email" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/auth/me": {
      "get": {
        "summary": "Get current user",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Current user data" },
          "401": { "description": "Not authenticated" }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "Get all users (Admin)",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer" } },
          { "name": "role", "in": "query", "schema": { "type": "string", "enum": ["admin", "inspector", "communityLeader"] } }
        ],
        "responses": { "200": { "description": "Paginated user list" } }
      }
    },
    "/api/villages": {
      "get": {
        "summary": "Get all villages",
        "tags": ["Villages"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "Paginated village list" } }
      }
    },
    "/api/inspections": {
      "get": {
        "summary": "Get inspections",
        "tags": ["Inspections"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Paginated inspection list" } }
      }
    },
    "/api/issues": {
      "get": {
        "summary": "Get issues",
        "tags": ["Issues"],
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Paginated issue list" } }
      }
    }
  }
}
